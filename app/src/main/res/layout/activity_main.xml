<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="activity"
            type="com.androidistanbul.databindingdemo.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonBasicBinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{activity.onButtonClicked}"
            android:text="@string/textBasicBinding" />

        <Button
            android:id="@+id/buttonLayoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{activity.onButtonClicked}"
            android:text="@string/textLayoutDetails" />

        <Button
            android:id="@+id/buttonLayoutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{activity.onButtonClicked}"
            android:text="@string/textLogin" />

    </LinearLayout>

</layout>
